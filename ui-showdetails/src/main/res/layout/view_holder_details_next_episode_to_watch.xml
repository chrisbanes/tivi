<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="textCreator"
            type="app.tivi.showdetails.details.ShowDetailsTextCreator" />

        <variable
            name="episode"
            type="app.tivi.data.entities.Episode" />

        <variable
            name="season"
            type="app.tivi.data.entities.Season" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <app.tivi.ui.widget.MaterialShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{clickListener}"
        app:materialBackgroundColor="?attr/colorSurface">

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            app:constraint_referenced_ids="episode_title,episode_number,space"
            app:flow_horizontalGap="@dimen/spacing_small"
            app:flow_verticalAlign="baseline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/episode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{textCreator.episodeTitleText(episode)}"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="A tale of two halves" />

        <TextView
            android:id="@+id/episode_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{textCreator.episodeNumberText(episode)}"
            android:textAppearance="?attr/textAppearanceCaption"
            app:visibleIfNotNull="@{episode.number}"
            tools:text="#1" />

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="0px" />

    </app.tivi.ui.widget.MaterialShapeConstraintLayout>

</layout>