<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.content.Context" />
        <import type="android.view.View" />

        <variable name="posterPath" type="String" />
        <variable name="title" type="String" />
        <variable name="annotationLabel" type="String" />
        <variable name="annotationIcon" type="int" />
        <variable name="transitionName" type="String" />
        <variable name="tmdbImageUrlProvider" type="me.banes.chris.tivi.tmdb.TmdbImageUrlProvider" />
        <variable name="clickListener" type="android.view.View.OnClickListener" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{clickListener}"
        android:orientation="vertical"
        android:transitionGroup="true"
        android:transitionName="@{transitionName}">

        <TextView
            android:id="@+id/show_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{title}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/shows.txt" />

        <ImageView
            android:id="@+id/show_poster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:tmdbImageUrlProvider="@{tmdbImageUrlProvider}"
            android:tmdbPosterPath="@{posterPath}"
            app:layout_constraintDimensionRatio="w,1.5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/show_annotation"
            style="@style/Widget.Tivi.GridItem.Annotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@{annotationIcon != 0 ? context.getDrawable(annotationIcon) : null}"
            android:text="@{annotationLabel}"
            android:visibleIfNotNull="@{annotationLabel}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="100" />

    </android.support.constraint.ConstraintLayout>
</layout>