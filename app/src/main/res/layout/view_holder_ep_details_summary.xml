<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="episode"
            type="app.tivi.data.entities.Episode" />
    </data>

    <app.tivi.ui.widget.BaselineGridTextView
        android:id="@+id/ep_details_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:padding="16dp"
        android:text="@{episode.summary}"
        android:textAppearance="?attr/textAppearanceBody1"
        app:maxLinesToggle="@{@integer/details_summary_collapsed_lines}"
        tools:text="@sample/episode_summary.txt" />

</layout>